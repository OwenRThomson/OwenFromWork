---
import { YOUR_NAME } from "../consts";
import Avatar from "./icons/Avatar.astro";
---

<div class="w-full">
  <h2 class="font-semibold tracking-tight text-pretty text-gray-900">
    <span
      class="text-surface-900 dark:text-surface-50 max-w-3xl font-semibold flex flex-wrap items-center gap-2 leading-tight text-left text-4xl sm:text-4xl md:text-5xl"
    >
      Hi, I'm {YOUR_NAME}
      <span class="flex items-center justify-center w-fit h-fit relative">
        <Avatar />
      </span> a <span
        class="bg-gradient-to-r text-transparent from-primary-500 to-secondary-500 bg-clip-text"
      >
        Software Engineer
      </span> @ <a href="https://www.polybox.app/" class="hover:underline"
        >Polybox.app</a
      >
    </span>
  </h2>
  <slot name="caption" />
</div>
