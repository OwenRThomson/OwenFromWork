---
import HeaderLink from "./HeaderLink.astro";
import SocialLinks from "./SocialLinks.astro";
import ThemeSwitcher from "./ThemeSelector.svelte";
import Avatar from "./icons/Avatar.astro";
import BurgerMenu from "./BurgerMenu.jsx";
import { SITE_TITLE } from "../consts";
---

<header class="flex mx-auto w-full justify-center">
  <nav class="flex w-full max-w-5xl items-center justify-between p-8">
    <!-- Logo/Brand -->
    <h2 class="flex items-center gap-4">
      <Avatar class="w-12 lg:w-8" />
      <a href="/" class="font-semibold text-3xl lg:text-xl">{SITE_TITLE}</a>
    </h2>

    <div class="flex items-right gap-4">
      <!-- Desktop Navigation -->

      <div class="hidden lg:flex text-6xl items-center gap-6">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>

      <div class="hidden lg:flex social-links items-center gap-4">
        <ThemeSwitcher client:load />
        <SocialLinks />
      </div>

      <!-- Mobile Navigation -->
      <div class="lg:hidden">
        <BurgerMenu client:load>
          <div class="flex flex-col gap-6 p-6">
            <HeaderLink href="/">Home</HeaderLink>
            <HeaderLink href="/blog">Blog</HeaderLink>
            <HeaderLink href="/about">About</HeaderLink>
            <div class="flex items-center justify-between">
              <ThemeSwitcher client:load />
              <SocialLinks />
            </div>
          </div>
        </BurgerMenu>
      </div>
    </div>
  </nav>
</header>
