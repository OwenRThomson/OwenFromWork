---
import { YOUR_NAME } from "../consts";
import Avatar from "./icons/Avatar.astro";
---

<div class="w-full">
  <h2
    class="font-semibold tracking-tight text-pretty text-gray-900 leading-[1.25]"
  >
    <span
      class="text-surface-900 dark:text-surface-50 max-w-3xl font-bold flex flex-wrap items-center gap-2 leading-[1.25] text-left text-4xl sm:text-4xl md:text-7xl lg:text-5xl"
    >
      Hi, I'm {YOUR_NAME}
      <span class="flex items-center justify-center w-fit h-fit relative">
        <Avatar class="w-32 mx-4 lg:mx-2 lg:w-20" />
      </span> a <span
        class="bg-gradient-to-r text-transparent from-primary-500 to-secondary-500 bg-clip-text"
      >
        Software Engineer
      </span> @ <a
        href="https://www.polybox.app/"
        class="hover:underline flex flex-row items-center"
        >Polybox.app
        <svg xmlns="http://www.w3.org/2000/svg" class="w-8" viewBox="0 0 24 24">
          <path
            fill="currentColor"
            d="M19 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h6v2H5v12h12v-6zM13 3v2h4.586l-7.793 7.793l1.414 1.414L19 6.414V11h2V3z"
          ></path>
        </svg>
      </a>
    </span>
  </h2>
  <slot name="caption" />
</div>
