---
import HeaderLink from "./HeaderLink.astro";
import SocialLinks from "./SocialLinks.astro";
import ThemeSwitcher from "./ThemeSelector.svelte";
import Avatar from "./icons/Avatar.astro";
import BurgerMenu from "./BurgerMenu.jsx";
import { SITE_TITLE } from "../consts";
---

<header class="flex mx-auto w-full justify-center">
  <nav class="flex w-full max-w-5xl items-center justify-between p-8">
    <!-- Logo/Brand -->
    <h2 class="flex items-center gap-2">
      <Avatar size="w-8" />
      <a href="/" class="font-semibold text-lg">{SITE_TITLE}</a>
    </h2>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex social-links items-center gap-4">
      <div class="flex items-center gap-4">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
      <ThemeSwitcher client:load />
      <SocialLinks />
    </div>

    <!-- Mobile Navigation -->
    <div class="md:hidden">
      <BurgerMenu client:load>
        <div class="flex flex-col gap-6 p-6">
          <div class="flex flex-col gap-4">
            <HeaderLink href="/">Home</HeaderLink>
            <HeaderLink href="/blog">Blog</HeaderLink>
            <HeaderLink href="/about">About</HeaderLink>
          </div>
          <div class="flex items-center justify-between">
            <ThemeSwitcher client:load />
            <SocialLinks />
          </div>
        </div>
      </BurgerMenu>
    </div>
  </nav>
</header>
